.page{
	width:100%;
	height:100%;
	position: relative;
	font-size: 50px;
	overflow: hidden;
}

.pageFirst{
	width:100%;
	height: 100%;
	background: #f00;
	position: absolute;
	left:0;
	z-index:2;
	overflow:hidden;
	
	transition:all .5s ease-in-out;
}

.pageFirstHover{
	width:30%;
	right:0;
	left:70%;
}

.content{
	width:300px; 
	height:300px;
	border:1px solid #333;
}
.pageSecond{
	width:100%;
	height: 100%;
	background: #00f;
	position: absolute;
	z-index:1;
}